<%= link_to 'Back', projects_path, class: 'btn btn-secondary btn-sm mb-3' %>

<div class="card">
  <div class="card-body">
    <h2 class='card-title d-flex justify-content-between mb-4'>
      <span><%= @project.name %></span>
      <div>
        <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-light btn-sm' %>
        <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-dark btn-sm' %>
      </div>
    </h2>

    <div class="mb-4">
      <h5>Add task</h5>

      <%= form_for([@task.project, @task]) do |f| %>
        <% if @task.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

            <ul>
              <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.hidden_field :status, value: 'not-started' %>

        <div class="input-group">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Enter task name...' %>
          <div class="input-group-append">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>

    <h4>Tasks</h4>
    <div data-controller="tasks">
      <ul id="tasks-list" data-action='drop->tasks#sort'>
        <%= render TaskComponent.with_collection(@project.tasks.order(position: :asc)) %>
      </ul>
    </div>
  </div>
</div>
